{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ],

    /*"noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,*/
    "types":[
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
      "src/**/*.ts",
      "node_modules/@types",
    "**/*.spec.ts"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}